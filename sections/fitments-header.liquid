    @media screen and (min-width: 990px) {
      header-drawer {
        display: none;
      }
    }
  {%- endif -%}

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }

  /* Header inline menu */
  .header__inline-menu {
    position: fixed !important;
    top: 102px;
    left: 0;
    width: 100vw !important;
    box-sizing: border-box;
    overflow-x: auto !important;
    overflow-y: hidden !important;
    padding: 0px;
    gap: 10px;
    background: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 999;
  }

  .header__inline-menu > ul {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin: 0 auto;
    padding-left: var(--first-menu-item-offset, 0);
    width: 100%;
    max-width: 1200px;
  }

  @media screen and (max-width: 749px) {
    .header__inline-menu > ul {
      max-width: 100%;
    }
  }
  @media screen and (min-width: 750px) and (max-width: 989px) {
    .header__inline-menu > ul {
      max-width: 700px;
    }
  }
  @media screen and (min-width: 990px) {
    .header__inline-menu > ul {
      max-width: 1200px;
    }
  }

  /* Submenu (segundo nivel) */
  .header__submenu {
    display: flex !important;
    flex-direction: row !important;
    flex-wrap: nowrap !important;
    white-space: nowrap;
    position: fixed !important;
    {% comment %} top: calc(var(--header-height) + 43px); {% endcomment %}
    left: 0;
    width: 100vw !important;
    box-sizing: border-box;
    overflow-x: auto !important;
    overflow-y: hidden !important;
    padding: 10px;
    gap: 10px;
    background: #f8f8f8;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 998;
  }

  .header__submenu__content {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin: 0 auto;
    padding-left: var(--first-menu-item-offset, 0);
    width: 100%;
    max-width: 1200px;
  }

  /* Items de segundo nivel */
  .header__submenu > .header__submenu__content > li {
    flex: 0 0 auto;
    margin-right: 5px;
    min-width: 60px;
    max-width: 120px;
    height: 30px;
  }

  .header__submenu .header__menu-item {
    padding: 5px 10px;
    border: 1px solid #000;
    border-radius: 6px;
    background: transparent;
    font-size: 12px;
    white-space: nowrap;
    cursor: pointer;
  }

  .header__submenu .childlink-trigger.active {
    background-color: #eb0a1d;
    color: #fff;
  }

  /* Tercer nivel - subsección fija */
  .header__third-submenu {
    position: fixed;
    top: calc(var(--header-height) + 120px); /* debajo del segundo nivel */
    left: 0;
    width: 100vw;
    background: #ffffff;
    display: none;
    padding: 10px;
    z-index: 997;
  }

  .header__third-submenu .third-submenu-wrapper {
    display: flex;
    margin: 0 auto;
    max-width: 1200px;
  }

  .header__third-submenu .third-submenu-sidebar {
    flex: 0 0 15%;
    padding: 20px 20px 20px 0;
    box-sizing: border-box;
  }

  .header__third-submenu .third-submenu-sidebar img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 4px;
  }

  .header__third-submenu .third-submenu-main {
    flex: 1;
    padding-left: 10px;
    min-width: 0;
  }

  .header__third-submenu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .header__third-submenu .third-submenu-content {
    display: none;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    list-style: none !important;
    padding: 20px 0;
  }

  .header__third-submenu .third-submenu-content.active {
    display: grid;
  }

  .header__third-submenu .third-submenu-content li {
    display: flex;
    flex-direction: row;
    align-items: center;
    list-style: none !important;
  }

  .header__third-submenu .third-submenu-content li img {
    width: 54px;
    height: 54px;
    object-fit: cover;
    margin-right: 10px;
    border-radius: 4px;
  }

  .header__third-submenu .third-submenu-content li a {
    text-decoration: none;
    color: #333;
    font-size: 14px;
    line-height: 1.4;
  }

  .header__third-submenu .third-submenu-content li a:hover {
    color: #000;
  }
</style>

