                              href="{%- if section.settings.use_apps_prefix -%}/apps{%- endif -%}{{ childlink.url }}"
                              class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"
                              {% if childlink.current %}
                                aria-current="page"
                              {% endif %}
                            >
                              {{ childlink.title | escape }}
                            </a>
                          {%- else -%}
                            <details id="Details-HeaderSubMenu-{{ link.handle }}-{{ childlink.handle }}">
                              <summary
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                                class="header__menu-item link link--text list-menu__item focus-inset caption-large childlink-trigger"
                                data-handle="{{ childlink.handle }}"
                                role="button"
                              >
                                <span>{{ childlink.title | escape }}</span>
                                {{- 'icon-caret.svg' | inline_asset_content -}}
                              </summary>
                              <ul
                                id="HeaderMenu-SubMenuList-{{ link.handle }}-{{ childlink.handle }}"
                                class="header__submenu list-menu motion-reduce"
                              >
                                {%- for grandchildlink in childlink.links -%}
                                  <li>
                                    <a
                                      id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                      href="{%- if section.settings.use_apps_prefix -%}/apps{%- endif -%}{{ grandchildlink.url }}"
                                      class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"
                                      {% if grandchildlink.current %}
                                        aria-current="page"
                                      {% endif %}
                                    >
                                      {{ grandchildlink.title | escape }}
                                    </a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </details>
                          {%- endif -%}
                        </li>
                      {%- endfor -%}
                    </div>
                  </ul>
                </details>
              </header-menu>

              {%- comment -%} Nueva subsección dinámica para tercer nivel (por cada menú de bloque) {%- endcomment -%}
              <div class="header__third-submenu" data-block-index="{{ forloop.index }}">
                <div class="third-submenu-wrapper page-width">
                  <div class="third-submenu-sidebar">
                    {%- if block.settings.sidebar_image -%}
                      <img
                        src="{{ block.settings.sidebar_image | image_url: width: 300, height: 400, crop: 'center' }}"
                        alt="{{ block.settings.heading | escape }} sidebar"
                        loading="lazy"
                      >
                    {%- endif -%}
                  </div>
                  <div class="third-submenu-main">
                    {%- for childlink in link.links -%}
                      {%- if childlink.links != blank -%}
                        <ul class="third-submenu-content" data-parent="{{ childlink.handle }}">
                          {%- for grandchildlink in childlink.links -%}
                            {%- assign image_key = 'third_image_' | append: forloop.index -%}
                            <li>
                              <img
                                src="{{ section.settings[image_key] | image_url: width: 54, height: 54, crop: 'center' }}"
                                alt="{{ grandchildlink.title | escape }}"
                                loading="lazy"
                              >
                              <a
                                href="{%- if section.settings.use_apps_prefix -%}/apps{%- endif -%}{{ grandchildlink.url }}"
                                class="header__menu-item list-menu__item link focus-inset caption-large"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ grandchildlink.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </ul>
    </nav>
  </header>
</{{ header_tag }}>

